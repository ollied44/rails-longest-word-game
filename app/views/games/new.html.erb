<div class="container mt-5 text-center">
  <h1 class="mb-4 fw-bold">New game</h1>

  <div style="display: flex; flex-wrap: wrap; gap: 10px;" class="mb-4">
  <% @letters.each do |letter| %>
    <div class="letter-tile"><%= letter %></div>
  <% end %>
</div>

  <p class="fs-5">What is the longest word you can find?</p>

  <form action="/score" method="post" data-turbo="false" class="d-flex justify-content-center mt-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(" ") %>

    <input type="text" name="word" class="form-control w-25 me-2" placeholder="Enter a word" autofocus>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
  </form>
</div>
